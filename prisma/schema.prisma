// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
    binaryTargets = ["native", "debian-openssl-3.0.x", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       String     @id @unique
  username String     @unique
  oid      String     @unique
  xuid     String     @unique
  serviceTag String  @db.VarChar(4)
  emblemPath String?
  sessions Session[]
  oauth    Oauth?
  Playlist Playlist[] @relation("User")
  favorites Playlist[] @relation("Favorites")
}

model Oauth {
  userId                String   @id
  spartanToken          String   @db.Text
  spartanTokenExpiresAt DateTime
  refreshToken          String   @db.Text
  clearanceToken        String
  user                  User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

model Session {
  id        String   @id @unique
  userId    String
  expiresAt DateTime
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)

  @@index([userId])
}

model Ugc {
  assetId         String        @id @unique @db.VarChar(36)
  versionId       String        @unique @db.VarChar(36)
  version         Int
  name            String        @db.VarChar(255)
  description     String        @db.VarChar(256)
  assetKind       Int           @db.UnsignedTinyInt
  thumbnailUrl    String        @db.VarChar(255)
  favorites       Int           @db.UnsignedInt
  likes           Int           @db.UnsignedInt
  bookmarks       Int           @db.UnsignedInt
  playsRecent     Int           @db.UnsignedInt
  playsAllTime    Int           @db.UnsignedInt
  averageRating   Decimal       @db.Decimal(3, 2)
  numberOfRatings Int           @db.UnsignedInt
  createdAt       DateTime
  updatedAt       DateTime
  publishedAt     DateTime
  hasNodeGraph    Boolean
  readOnlyClones  Boolean
  numberOfObjects Int?          @db.UnsignedInt
  files           Json
  recommended     Boolean       @default(false)
  contributors    Contributor[] @relation("ContributorToUgc") 
  author          Contributor? @relation("Author", references: [xuid], fields: [authorId] )
  authorId        String
  tag             Tag[]
  mapPairs        UgcPair[] @relation("MapAsset")
  gamemodePairs   UgcPair[] @relation("GamemodeAsset")
  deletedAt       DateTime?

  @@index([assetKind])
  @@index([recommended])
  @@index([authorId])
}

model Contributor {
  xuid       String  @id
  gamertag   String
  serviceTag String  @db.VarChar(4)
  emblemPath String?
  contributorUgc        Ugc[] @relation("ContributorToUgc")
  authorUgc        Ugc[] @relation("Author")
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique
  ugc  Ugc[]
}

model Playlist {
  assetId          String  @id @unique @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name        String
  assetKind       Int           @db.UnsignedTinyInt @default(5)
  description String
  thumbnailUrl  String @default("/placeholder.webp")
  private     Boolean
  userId      String
  user        User    @relation("User", references: [id], fields: [userId], onDelete: Cascade)
  ugcPairs    UgcPair[]
  favoritedBy       User[]  @relation("Favorites")

  @@index([userId])
}

model UgcPair {
  id              String   @id @default(uuid())
  playlistId      String
  mapAssetId      String?
  gamemodeAssetId String?
  createdAt       DateTime @default(now())
  playlist        Playlist @relation(fields: [playlistId], references: [assetId], onDelete: Cascade)
  map             Ugc?     @relation("MapAsset", fields: [mapAssetId], references: [assetId])
  gamemode        Ugc?     @relation("GamemodeAsset", fields: [gamemodeAssetId], references: [assetId])

  @@index([playlistId])
  @@index([mapAssetId])
  @@index([gamemodeAssetId])
}

model WaypointSync {
  id        Int      @id @default(autoincrement())
  syncedAt  DateTime
  assetKind SyncType @unique
}

model BetaAccess {
  gamertag   String  @id @unique
}

enum SyncType {
  Map
  Prefab
  UgcGameVariant
  Recommended343
  MapDeleted
  PrefabDeleted
  UgcGameVariantDeleted
}